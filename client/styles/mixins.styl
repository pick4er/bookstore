
/* fonts */
defineFont(font-family, filename, font-weight, font-style)
  @font-face
    font-family font-family
    font-weight font-weight
    font-style font-style
    font-display auto
    src url('./fonts/' + filename + '.ttf') format('truetype')

x(n = 1)
  $normalized = (n / $defaultFontSize)
  return 1rem * $normalized

flexCenter()
  display flex
  flex-flow row nowrap
  justify-content center
  align-items center

flexBetween()
  display flex
  flex-flow row nowrap
  justify-content space-between
  align-items center

flexStretch()
  display flex
  flex-flow row nowrap
  justify-content space-around
  align-items stretch
  width 100%

flexColumn()
  display flex
  flex-flow column nowrap

textEllipsis()
  overflow hidden
  white-space nowrap
  text-overflow ellipsis

accentFont()
  color $black
  font-family $robotoBold
  text-decoration underline
  font-size x(13)

errorText()
  display block
  font-size x(12)
  color $error
  margin-top x(6)

successText()
  display block
  font-size x(12)
  color $success
  margin-top x(6)  
