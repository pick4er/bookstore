  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "clear": "rm -rf ./build",
    "build-dev-server": "webpack --config webpack-configs/server/dev.js",
    "build-dev-client": "webpack --config webpack-configs/client/dev.js",
    "build-prod-server": "webpack --config webpack-configs/server/prod.js",
    "build-prod-client": "webpack --config webpack-configs/client/prod.js",
    "start": "node build/server.js",
    "dev": "export NODE_ENV=development && npm run clear && npm run build-dev-client && npm run build-dev-server && npm run start",
    "prod": "export NODE_ENV=production && npm run clear && npm run build-prod-client && npm run build-prod-server && npm run start",
    "heroku-postbuild": "export NODE_ENV=production && npm run build-prod-client && npm run build-prod-server"
  },
